{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["es6", "DOM", "es2021"],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "allowUnreachableCode": true,
        "checkJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": false,
        "noEmit": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@hooks/*": ["src/hooks/*"],
            "@redux/*": ["src/redux/*", "src/redux/index.tsx"],
            "@redux": ["src/redux/index.tsx"],
            "@icons/*": ["src/icons/*"],
            "@dialogs/*": ["src/Dialogs/*"],
            "@fetch": ["src/fetch.ts"],
            "@components/*": ["src/components/*"]
        }
    },
    "include": ["typings/**/*", "src/**/*", "locales/useLocale.tsx"],
    "exclude": ["build", "config", "node_modules", "public", "dist"]
}
